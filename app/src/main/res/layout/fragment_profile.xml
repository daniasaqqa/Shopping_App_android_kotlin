<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundr"
    android:paddingBottom="100dp"
    tools:context=".Fragments.ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/card_back_prof"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_change_password_profile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/change_password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.978"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_img"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:background="@drawable/category_circle"
            android:src="@drawable/img_slide_one"
            app:civ_border_color="@color/maincolor"
            app:civ_border_width="1dp"
            app:layout_constraintBottom_toBottomOf="@+id/view5"
            app:layout_constraintEnd_toEndOf="@+id/view5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view5"
            app:layout_constraintVertical_bias="0.296"
            app:layout_goneMarginEnd="25dp" />

        <TextView
            android:id="@+id/username_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif"
            android:text="Dania Alsaqqa"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/profile_img"
            app:layout_constraintHorizontal_bias="0.51"
            app:layout_constraintStart_toStartOf="@+id/profile_img"
            app:layout_constraintTop_toBottomOf="@+id/profile_img" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:elevation="4dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view5">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Main Information"
                    android:textColor="#81E73039"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.066"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/edit_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="184dp"
                    android:text="Edit"
                    android:textColor="#81E73039"
                    app:layout_constraintBottom_toBottomOf="@+id/textView9"
                    app:layout_constraintStart_toEndOf="@+id/textView9"
                    app:layout_constraintTop_toTopOf="@+id/textView9"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/phone_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="05983384949"
                    app:layout_constraintEnd_toEndOf="@+id/textView9"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/textView9"
                    app:layout_constraintTop_toBottomOf="@+id/textView9" />

                <TextView
                    android:id="@+id/email_profilee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="daniasaqqa@gmail.com"
                    app:layout_constraintEnd_toEndOf="@+id/phone_profile"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/phone_profile"
                    app:layout_constraintTop_toBottomOf="@+id/phone_profile" />


                <TextView
                    android:id="@+id/about_me_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="hi my name dania iam from gaza"
                    app:layout_constraintEnd_toEndOf="@+id/email_profilee"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/email_profilee"
                    app:layout_constraintTop_toBottomOf="@+id/email_profilee" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_marginTop="24dp"
            android:elevation="4dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="@+id/cardView"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/cardView"
            app:layout_constraintTop_toBottomOf="@+id/cardView">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/youraccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Your Account"
                    android:textColor="#81E73039"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.066"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/categories_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Categories"
                    app:layout_constraintEnd_toEndOf="@+id/youraccount"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/youraccount"
                    app:layout_constraintTop_toBottomOf="@+id/youraccount" />


                <TextView
                    android:id="@+id/statistics_buy_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Statistics buy product"
                    app:layout_constraintEnd_toEndOf="@+id/categories_profile"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/categories_profile"
                    app:layout_constraintTop_toBottomOf="@+id/categories_profile" />


                <TextView
                    android:id="@+id/statistics_most_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Statistics most rated"
                    app:layout_constraintEnd_toEndOf="@+id/statistics_buy_profile"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/statistics_buy_profile"
                    app:layout_constraintTop_toBottomOf="@+id/statistics_buy_profile" />


                <TextView
                    android:id="@+id/user_pruched_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="user pruched"
                    app:layout_constraintEnd_toEndOf="@+id/statistics_most_profile"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/statistics_most_profile"
                    app:layout_constraintTop_toBottomOf="@+id/statistics_most_profile" />

                <Button
                    android:id="@+id/imf_btn_categories"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="232dp"
                    android:background="@drawable/arrow"
                    app:layout_constraintBottom_toBottomOf="@+id/categories_profile"
                    app:layout_constraintStart_toEndOf="@+id/categories_profile"
                    app:layout_constraintTop_toTopOf="@+id/categories_profile"
                    app:layout_constraintVertical_bias="1.0" />

                <Button
                    android:id="@+id/img_btn_statistics_buy"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="163dp"
                    android:background="@drawable/arrow"
                    app:layout_constraintBottom_toBottomOf="@+id/statistics_buy_profile"
                    app:layout_constraintStart_toEndOf="@+id/statistics_buy_profile"
                    app:layout_constraintTop_toTopOf="@+id/statistics_buy_profile"
                    app:layout_constraintVertical_bias="1.0" />


                <Button
                    android:id="@+id/img_btn_statistics_most"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="169dp"
                    android:background="@drawable/arrow"
                    app:layout_constraintBottom_toBottomOf="@+id/statistics_most_profile"
                    app:layout_constraintStart_toEndOf="@+id/statistics_most_profile"
                    app:layout_constraintTop_toTopOf="@+id/statistics_most_profile"
                    app:layout_constraintVertical_bias="1.0" />

                <Button
                    android:id="@+id/img_btn_pruched"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="219dp"
                    android:background="@drawable/arrow"
                    app:layout_constraintBottom_toBottomOf="@+id/user_pruched_profile"
                    app:layout_constraintStart_toEndOf="@+id/user_pruched_profile"
                    app:layout_constraintTop_toTopOf="@+id/user_pruched_profile"
                    app:layout_constraintVertical_bias="1.0" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:elevation="4dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="@+id/cardView2"
            app:layout_constraintStart_toStartOf="@+id/cardView2"
            app:layout_constraintTop_toBottomOf="@+id/cardView2">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/setting_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Your Account"
                    android:textColor="#81E73039"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.066"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/logout_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Log out"
                    app:layout_constraintEnd_toEndOf="@+id/setting_profile"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/setting_profile"
                    app:layout_constraintTop_toBottomOf="@+id/setting_profile" />


                <TextView
                    android:id="@+id/delete_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Delete Account"
                    app:layout_constraintEnd_toEndOf="@+id/logout_profile"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/logout_profile"
                    app:layout_constraintTop_toBottomOf="@+id/logout_profile" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>