<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
     android:id="@+id/con_cat"
    android:layout_width="78dp"
    android:paddingStart="4dp"
    android:layout_height="100dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/category_rc_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/category_circle"
        android:src="@drawable/img_slide_one"
        app:civ_border_color="@color/maincolor"
        app:civ_border_width="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.068"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginEnd="25dp" />

    <TextView
        android:id="@+id/tv_category_rc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginStart="8dp"
        android:text="Clothes"
        app:layout_constraintEnd_toEndOf="@+id/category_rc_img"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/category_rc_img"
        app:layout_constraintTop_toBottomOf="@+id/category_rc_img" />


</androidx.constraintlayout.widget.ConstraintLayout>