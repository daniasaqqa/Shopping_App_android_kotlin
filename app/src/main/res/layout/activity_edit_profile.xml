<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.EditProfile">

    <Button
        android:id="@+id/btn_back_edit_profile"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/arrow_back_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/card_back_prof"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_edit_profile"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:background="@drawable/category_circle"
        android:src="@drawable/img_slide_one"
        app:civ_border_color="@color/maincolor"
        app:civ_border_width="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/view5"
        app:layout_constraintEnd_toEndOf="@+id/view5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view5"
        app:layout_constraintVertical_bias="0.48"
        app:layout_goneMarginEnd="25dp" />

    <View
        android:id="@+id/view9"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/card_shape_design"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_edit_profile" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Edit Profile"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/view9"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/view9"
        app:layout_constraintTop_toTopOf="@+id/view9" />

    <EditText
        android:id="@+id/edit_name_edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:drawableStart="@drawable/user"
        android:drawablePadding="8sp"
        android:ems="17"
        android:fontFamily="sans-serif"
        android:hint="Edit Name"
        android:inputType="text"
        android:paddingStart="5sp"
        android:pointerIcon="text"
        android:textColor="#E73039"
        app:layout_constraintEnd_toEndOf="@+id/textView13"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/textView13"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <EditText
        android:id="@+id/edit_email_edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:drawableStart="@drawable/email_icon"
        android:drawablePadding="8sp"
        android:ems="17"
        android:fontFamily="sans-serif"
        android:hint="Edit Email"
        android:inputType="text"
        android:paddingStart="5sp"
        android:pointerIcon="text"
        android:textColor="#E73039"
        app:layout_constraintEnd_toEndOf="@+id/edit_name_edit_profile"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/edit_name_edit_profile"
        app:layout_constraintTop_toBottomOf="@+id/edit_name_edit_profile" />

    <EditText
        android:id="@+id/edit_phone_edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:drawableStart="@drawable/mobile_icon"
        android:drawablePadding="8sp"
        android:ems="17"
        android:fontFamily="sans-serif"
        android:hint="Edit Phone"
        android:inputType="text"
        android:paddingStart="5sp"
        android:pointerIcon="text"
        android:textColor="#E73039"
        app:layout_constraintEnd_toEndOf="@+id/edit_email_edit_profile"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/edit_email_edit_profile"
        app:layout_constraintTop_toBottomOf="@+id/edit_email_edit_profile" />

    <EditText
        android:id="@+id/edit_about_me_edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:drawableStart="@drawable/about_me_icon"
        android:drawablePadding="8sp"
        android:ems="17"
        android:fontFamily="sans-serif"
        android:hint="Edit About Me"
        android:inputType="textMultiLine"
        android:lines="5"
        android:paddingStart="5sp"
        android:textColor="#E73039"
        app:layout_constraintEnd_toEndOf="@+id/edit_phone_edit_profile"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/edit_phone_edit_profile"
        app:layout_constraintTop_toBottomOf="@+id/edit_phone_edit_profile" />

    <Button
        android:id="@+id/btn_Save_edit_profile"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:background="@drawable/button_syle"
        android:fontFamily="sans-serif"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/edit_about_me_edit_profile"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/edit_about_me_edit_profile"
        app:layout_constraintTop_toBottomOf="@+id/edit_about_me_edit_profile" />


</androidx.constraintlayout.widget.ConstraintLayout>